#:kivy 2.1.0
#:import T co_lang.T
#:import ACTION_ICON __main__.ACTION_ICON

#:set dark_gray (.5, .5, .5, 1)

MDBoxLayout:
    orientation: "vertical"
    MDTopAppBar:
        id: ps_toolbar
        title: T("co-toolbar-title")
        icon: ACTION_ICON
        animate_action_button: False
        next_icon: app.pulse_icon_counter() # Not a callback.
        right_action_items: [ ['folder', lambda x: app.dir_deploy_book()], ['file', lambda x: app.file_deploy_book()], ['earth-box', lambda x: app.menu_locale_open(x)], ['dots-vertical', lambda x: app.menu_main_open(x)], ]
    MDTabs:
        id: ps_tabs
        on_tab_switch: app.on_tab_switch(*args)
        TabList:
            id: ps_tab_filetree
            icon: "folder"
            text: T("co-supplies")
            FileChooserListView:
                id: ps_filechooser
                canvas.before:
                    Color:
                        rgba: dark_gray
                    Rectangle:
                        size: self.size
                        pos: self.pos
                on_selection: ps_tab_list.selected(ps_filechooser.selection)
            #MDBoxLayout:
            #    id: box
            #    spacing: "56dp"
            #    adaptive_size: True
            #    pos_hint: {"center_x": .5, "center_y": .5}
            #    MDFloatingActionButton:
            #        id: fc_playdir
            #        icon: "folder"
            #    MDFloatingActionButton:
            #        id: fc_playfile
            #        icon: "file"
        TabDetails:
            id: ps_tab_book
            icon: "book"
            text: T("co-supply-details")
            MDScrollView:


<MDScrollView>
    bar_margin: 5
    bar_width: 15
    bar_color: .0, .8, .0, 1
    bar_inactive_color: .5, .5, .5, 1
    effect_cls: "ScrollEffect"
    scroll_type: ["bars", "content"]
    scroll_distance: 5
    scroll_timeout: 50


<ColoredLabel@MDLabel>:
    canvas.before:
        Color:
            #rgba: root.background_color
            rgba: 0, 0, 0, .1
        Rectangle:
            pos: self.pos
            size: self.size


<PowerListItem>:
    IconLeftWidget:
        id: item_left
        icon: "earth"
    #RightSelectButton:


<RightSelectButton>:
    icon: "arrow-right"
